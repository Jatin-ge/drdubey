generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
enum GenderType {
  M 
  F
  OTHER
}

model Lead {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String?
  age Int?
  remark String?
  address String?
  gender GenderType @default(M)
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  status LeadStatus @default(PENDING)
  doad DateTime? 
  dood DateTime? 
  dx String?
  surgery String?
  side String?
  implant String? 
  ipdReg Int?
  bill Int?
}
enum LeadStatus {
  PENDING
  CONTACTED
  CONVERTED
  LOST
}

